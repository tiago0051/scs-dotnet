<Window x:Class="Sistema_Caixa_Seguro.Windows.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sistema_Caixa_Seguro.Windows"
        mc:Ignorable="d"
        Title="LoadingWindow" Height="100" Width="300" Loaded="Window_Loaded" AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFFC8312"/>
            <GradientStop Color="#FFD95704" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch">
        <ProgressBar x:Name="ProgressBar" Height="30" Margin="20,50,20,0" VerticalAlignment="Top" Background="#FFFC8312" BorderBrush="{x:Null}" Foreground="White"/>
        <Label x:Name="LabelProgress" Content="Carregando" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" FontSize="15" Foreground="White"/>
    </Grid>
</Window>
